                            "name": "AllowSshRdpOutbound",
                            "properties": {
                              "priority": 100,
                              "direction": "Outbound",
                              "access": "Allow",
                              "protocol": "*",
                              "sourceAddressPrefix": "*",
                              "sourcePortRange": "*",
                              "destinationAddressPrefix": "VirtualNetwork",
                              "destinationPortRanges": [
